<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/love_theme"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/a_main_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.9"
        android:onClick="changervictor"
        android:text="@string/faire_du_bien_a_victor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a_main_img_victor" />

    <ImageView
        android:id="@+id/a_main_img_victor"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:alpha="0.9"
        android:contentDescription="@string/la_belle_image_de_base"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/a_main_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/victornormal"
        app:tint="#31E88989" />

</androidx.constraintlayout.widget.ConstraintLayout>